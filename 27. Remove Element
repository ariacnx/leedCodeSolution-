//solution one
class Solution {
    public int removeElement(int[] nums, int val) {
        int i = 0;
        
        for (int j = 0; j< nums.length; j++){
            if (nums[j] != val){
            nums[i] = nums[j];
            }
            i++;
        }
        
        return i;
    }
}

//solution two
class Solution {
    public int removeElement(int[] nums, int val) {
        int count = 0;
        for (int i = 0; i < nums.length; i++){
            if (nums[i] == val){
                count++;
            }  
        }

        int[] newArr = new int[nums.length - count];
    
        int j = 0;
        for (int i = 0; i < nums.length; i++){
            if (nums[i] != val){
                newArr[j] = nums[i];
                j++;
            }  
        }
        return newArr.length;
    }
}
